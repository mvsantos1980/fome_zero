<div class="col-6">
<%= form_with(model: dish, local: true) do |form| %>
  <% if dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Descrição" %>
    <%= form.text_field :description, id: :dish_description %>
  </div>

  <div class="field">
    <%= form.label "Preço $" %>
    <%= form.text_field :price, id: :dish_price %>
  </div>

  <div class="field">
    <%= form.label "Tempo de preparo horas:minutos" %>
    <%= form.time_select :timePreparation, id: :dish_timePreparation %>
  </div>

  <div class="field">
    <%= form.label "Ingredientes" %>
    <% @ingredients.each do|ingredient|%>
      <%= check_box_tag "dish[ingredient_ids][]", ingredient.id, @dish.ingredients.include?(ingredient) %>
      <%= ingredient.description %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", :class => 'btn btn-outline-success' %>
  </div>

<% end %>
</div>
