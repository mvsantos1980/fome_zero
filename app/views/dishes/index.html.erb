<p id="notice"><%= notice %></p>

<h1>Pratos</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Tempo Preparação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= dish.timePreparation %></td>
        <td><%= link_to 'Exibir', dish %></td>
        <td><%= link_to 'Editar', edit_dish_path(dish) %></td>
        <td><%= link_to 'Excluir', dish, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Prato', new_dish_path %>
